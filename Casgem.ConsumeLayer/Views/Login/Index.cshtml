@model Casgem.ConsumeLayer.Models.LoginViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_LoginView.cshtml";
}
<h2>Giriş Sayfası</h2>
@if (Model != null)
    @if (Model.ErrorMessage == null)
    {
        @if (Model.UserName != null)
        {
            <span>@Model.UserName</span>
        }
    }
    else
    {
        <span>@Model.ErrorMessage</span>
    }
<form method="post">
    <div class="wthree-field">
        <span class="input-group-text">Kullanıcı Adı: </span>
        <input type="text" class="form-control" name="Username" />
    </div>
    <div class="wthree-field">
        <span class="input-group-text">Şifre: </span>
        <input type="text" class="form-control" name="Password" />
    </div>
    <div class="wthree-field">
        <button class="btn btn-primary my-4" type="submit">Giriş Yap</button>
    </div>
</form>